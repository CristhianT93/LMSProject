@model IEnumerable<DBFirstEF_LMS.Models.Student_Assignment>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div class="form-horizontal">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.grade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Assignment.assignment_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Section.Course.course_name) @Html.DisplayNameFor(model => model.Section.Course.course_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student.Fname)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.EditorFor(model => model.grade, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.grade, "", new { @class = "text-danger" })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Assignment.assignment_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Section.Course.course_name) @Html.DisplayNameFor(model => model.Section.Course.course_id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Student.Fname)
                </td>
            </tr>
        }

    </table>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>

}
