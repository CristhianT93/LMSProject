@model DBFirstEF_LMS.Models.Assignment

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutTeacher.cshtml";

}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Assignment</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Assignment
        </dt>

        <dd>
            @Html.DisplayFor(model => model.assignment_name)
        </dd>

        <dt>
            Due Date
        </dt>

        <dd>
            @Html.DisplayFor(model => model.assignment_due_dt)
        </dd>

        <dt>
            Open Date
        </dt>

        <dd>
            @Html.DisplayFor(model => model.assignment_open_dt)
        </dd>

        <dt>
            Day
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Section.day_of_week)
