@model DBFirstEF_LMS.Models.StaffLogin

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="body-content">
    @ViewBag.Message
    <br />
    @using (Html.BeginForm("Login", "StaffLogins", FormMethod.Post))
    {
        <table class="table-responsive">
            <tr>
                <td>
                    @Html.Label("Staff ID: ")
                </td>
                <td>
                    <input type="text" name="staffID" id="staffID" />
                </td>
            </tr>
            <tr>
                <td>
                    @Html.Label("Password: ")
                </td>
                <td>
                    <input type="password" name="staffPass" id="staffPass" />
                </td>
            </tr>
        </table>
        <input type="submit" value="Login" />
        
    }
</div>